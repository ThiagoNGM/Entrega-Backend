<div class="routingLibros">

  <nav aria-label="Page navigation example"></nav>
  <ul class="pagination">
    <li class="page-item">
      {{#if hasPrevPage}}
      <a class="page-link" href={{this.prevLink}}a aria-label="Previous">
        <span aria-hidden="true">&laquo;</span>
      </a>
      {{/if}}
    </li>
    <li class="page-item"><a class="page-link" href="#">{{this.page}}</a></li>
    <li class="page-item">
      {{#if hasNextPage}}
      <a class="page-link" href={{this.nextLink}} aria-label="Next">
        <span aria-hidden="true">&raquo;</span>
      </a>
      {{/if}}
    </li>
  </ul>
  </nav>
</div>

{{#if isValid}}
<div class="contenedorLibros">
  {{#each docs}}
  <div class="card cardLibro" style="width: 13rem;">
    <a href="/products/{{this.id}}">
      <img src="{{this.img}}" class="card-img-top imgCard" alt="{{this.title}}">
    </a>
    <div class="card-body descripcionCard">
      <h4 class="card-title">{{this.title}}</h4>
      <h6 class="card-title">Categor√≠a: {{this.category}}</h6>
      <h6 class="card-title">Stock: {{this.stock}}</h6>
      <div class="precioCarrito">
        <h4 class="card-title" style="color: black;">${{this.price}}</h4>
        <img src="/images/cart.svg" class="carrito" alt="Carrito">
      </div>
    </div>
  </div>

  {{/each}}
</div>
{{else}}
<h1>No hay productos para mostrar</h1>
{{/if}}


